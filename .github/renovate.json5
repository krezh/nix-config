{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  nix: {
    enabled: true,
  },
  postUpdateOptions: ["gomodTidy"],
  lockFileMaintenance: {
    enabled: true,
    schedule: ["after 1am and before 2am"],
    automerge: true,
    automergeType: "pr",
    ignoreTests: false,
  },
  customDatasources: {
    "open-vsix": {
      defaultRegistryUrlTemplate: "https://open-vsx.org/api/{{packageName}}",
      format: "json",
      transformTemplates: [
        '{ "releases": [$keys(allVersions)[$match($, /^[0-9]/)].{ "version": $ }] }',
      ],
    },
  },
  customManagers: [
    {
      customType: "regex",
      managerFilePatterns: ["/\\.nix$/"],
      matchStrings: [
        'pname = "(?<packageName>[^"]+)";\\s*\\n\\s*# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\\s*\\n\\s*version = "(?<currentValue>[^"]+)"',
        'name = "(?<packageName>[^"]+)";\\s*\\n\\s*# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\\s*\\n\\s*version = "(?<currentValue>[^"]+)"',
        'publisher = "(?<packageName>[^"]+)";\\s*\\n\\s*# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\\s*\\n\\s*version = "(?<currentValue>[^"]+)"',
      ],
      datasourceTemplate: "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}",
      versioningTemplate: "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
      packageNameTemplate: "{{{depName}}}",
      extractVersionTemplate: "^v?(?<version>.*)$",
    },
  ],
  packageRules: [
    {
      description: "Update hashes for vscode-extensions",
      matchManagers: ["custom.regex"],
      matchFileNames: ["pkgs/vscode-extensions/**/*.nix"],
      matchDatasources: ["custom.open-vsix"],
      postUpgradeTasks: {
        commands: [
          'bash -c \'PUBLISHER=$(grep -oP "publisher = "\\K[^"]+" {{{packageFile}}}); NAME=$(grep -oP "name = "\\K[^"]+" {{{packageFile}}}); VERSION=$(grep -oP "version = "\\K[^"]+" {{{packageFile}}}); URL="https://${PUBLISHER}.gallery.vsassets.io/_apis/public/gallery/publisher/${PUBLISHER}/extension/${NAME}/${VERSION}/assetbyname/Microsoft.VisualStudio.Services.VSIXPackage"; HASH=$(nix-prefetch-url "$URL" 2>/dev/null | xargs nix hash to-sri --type sha256); sed -i "s|hash = "sha256-[^"]*"|hash = "$HASH"|" {{{packageFile}}}\'',
        ],
        fileFilters: ["**/*.nix"],
        executionMode: "update",
      },
      automerge: true,
      automergeType: "pr",
      ignoreTests: false,
    },
    {
      matchManagers: ["custom.regex"],
      matchFileNames: ["pkgs/**/*.nix"],
      extractVersion: "^(?<version>.+)$",
      postUpgradeTasks: {
        commands: [
          'bash -c \'PKG=$(grep -P "^\\s*pname = " {{{packageFile}}} | cut -d\\" -f2); nix run github:Mic92/nix-update -- $PKG --flake --version=skip || true\'',
        ],
        fileFilters: ["**/*.nix"],
        executionMode: "update",
      },
      automerge: true,
      automergeType: "pr",
      ignoreTests: false,
    },
    {
      description: "Separate PRs for pkgs",
      matchFileNames: ["pkgs/**"],
      additionalBranchPrefix: "pkgs-",
      automerge: true,
      automergeType: "pr",
      ignoreTests: false,
    },
    {
      description: "Update govendor.toml when go.mod changes",
      matchManagers: ["gomod"],
      postUpgradeTasks: {
        commands: [
          "nix run github:purpleclay/go-overlay#govendor -- {{{packageFileDir}}}",
        ],
        fileFilters: ["**/govendor.toml", "**/go.sum"],
        executionMode: "update",
      },
      automerge: true,
      automergeType: "pr",
      ignoreTests: false,
    },
  ],
}
