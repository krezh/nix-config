{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  nix: {
    enabled: true,
  },
  lockFileMaintenance: {
    enabled: true,
    schedule: ["after 1am and before 2am"],
    automerge: true,
    automergeType: "pr",
    ignoreTests: false,
  },
  customManagers: [
    {
      customType: "regex",
      managerFilePatterns: ["/\\.nix$/"],
      matchStrings: [
        'pname = "(?<packageName>[^"]+)";\\s*\\n\\s*# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\\s*\\n\\s*version = "(?<currentValue>[^"]+)"',
      ],
      datasourceTemplate: "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}",
      versioningTemplate: "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
      packageNameTemplate: "{{{depName}}}",
      extractVersionTemplate: "^v?(?<version>.*)$",
    },
  ],
  packageRules: [
    {
      matchManagers: ["custom.regex"],
      matchFileNames: ["pkgs/**/*.nix"],
      extractVersion: "^(?<version>.+)$",
      postUpgradeTasks: {
        commands: [
          'bash -c \'PKG=$(grep -P "^\\s*pname = " {{{packageFile}}} | cut -d\\" -f2); nix run github:Mic92/nix-update -- $PKG --flake --version=skip\'',
        ],
        fileFilters: ["**/*.nix"],
        executionMode: "update",
      },
      automerge: true,
      automergeType: "pr",
    },
    {
      description: "Separate PRs for pkgs",
      matchFileNames: ["pkgs/**"],
      additionalBranchPrefix: "pkgs-",
      automerge: true,
      automergeType: "pr",
    },
    {
      description: "Update gomod2nix.toml when go.mod changes",
      matchManagers: ["gomod"],
      postUpgradeTasks: {
        commands: [
          "cd {{{packageFileDir}}} && nix run github:nix-community/gomod2nix",
        ],
        fileFilters: ["**/gomod2nix.toml", "**/go.sum"],
        executionMode: "update",
      },
      automerge: true,
      automergeType: "pr",
    },
  ],
}
