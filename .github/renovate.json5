{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  nix: {
    enabled: true,
  },
  lockFileMaintenance: {
    enabled: true,
    schedule: ["after 1am and before 2am"],
    automerge: true,
    automergeType: "pr",
    ignoreTests: false,
  },
  customManagers: [
    {
      customType: "regex",
      managerFilePatterns: ["/\\.nix$/"],
      matchStrings: [
        'pname = "(?<packageName>[^"]+)";\\s*\\n\\s*# renovate: datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>\\S+))?\\s*\\n\\s*version = "(?<currentValue>[^"]+)"',
      ],
      datasourceTemplate: "{{#if datasource}}{{{datasource}}}{{else}}github-releases{{/if}}",
      versioningTemplate: "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
    },
  ],
  postUpgradeTasks: {
    commands: [
      "nix run github:Mic92/nix-update -- {{{packageName}}} --flake --version={{{newValue}}}",
    ],
    fileFilters: ["**/*.nix"],
    executionMode: "update",
  },
  allowedCommands: ["^nix run github:Mic92/nix-update -- .+"],
}
